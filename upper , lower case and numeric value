// show lowercase, uppercase,numeric value 


#include<iostream>
using namespace std;
 int main(){
   char ch;
   cout<<" enter the value of ch ";
   cin>>ch;
     if( ch>='a'&& ch<='z'){
      cout<<" this is an lower case ";
   }
 else  if(ch>='A'&&ch<='Z') {
      cout<<" this is an uppercase ";
      } 
    else  //( ch>=0 && ch<=9 )
    {
         cout<<" this is an numeric value "<<endl;
    }
 return 0;
 }
